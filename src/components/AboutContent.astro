---
import aboutData from "../content/pages/about.json";

// Convertir le markdown en HTML (simple conversion avec sauts de ligne)
const contentHtml = aboutData.content.split('\n\n').map(p => `<p>${p}</p>`).join('\n    ');
---
<article class="about-content">
  <header class="about-header">
    <h1>{aboutData.title}</h1>
  </header>

  <section class="about-section">
    <Fragment set:html={contentHtml} />
  </section>
</article>

<style>
  .about-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .about-header {
    margin-top: 1rem;
    margin-bottom: 3rem;
    text-align: center;
  }

  .about-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .about-section {
    margin-bottom: 3rem;
  }

  .about-section p {
    line-height: 1.7;
    margin-bottom: 1rem;
    color: #555;
  }

  @media (max-width: 768px) {
    .about-header h1 {
      font-size: 2rem;
    }
  }
</style>