---
import { getCollection } from 'astro:content';

const projets = (await getCollection('projets')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<section class="projets-section">
  <div class="masonry-grid">
    {projets.map((projet) => (
      <a href={`/projets/${projet.id}`} class="projet-card">
        <div class="projet-image">
          <img src={projet.data.thumbnail.image} alt={projet.data.thumbnail.alt} loading="lazy" />
          {projet.data.featured && <span class="featured-badge">â˜… En vedette</span>}
          <div class="projet-overlay">
            <div class="projet-info">
              <h3>{projet.data.title}</h3>
              <p class="projet-date">
                {projet.data.date.toLocaleDateString('fr-FR', {
                  year: 'numeric',
                  month: 'long'
                })}
              </p>
              <p class="projet-description">{projet.data.description}</p>
            </div>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .projets-section {
    padding: 2rem 0;
  }

  .masonry-grid {
    column-count: 3;
    column-gap: 1.5rem;
  }

  .projet-card {
    display: inline-block;
    width: 100%;
    margin-bottom: 1.5rem;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    color: inherit;
    break-inside: avoid;
    page-break-inside: avoid;
  }

  .projet-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .projet-image {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .projet-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .featured-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #ffd700;
    color: #333;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    z-index: 2;
  }

  .projet-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.85);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    padding: 1.5rem;
  }

  .projet-card:hover .projet-overlay {
    opacity: 1;
  }

  .projet-info {
    text-align: center;
    color: white;
  }

  .projet-info h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    color: white;
  }

  .projet-date {
    margin: 0 0 0.75rem 0;
    font-size: 0.875rem;
    color: #ddd;
  }

  .projet-description {
    margin: 0;
    font-size: 0.938rem;
    color: #eee;
    line-height: 1.5;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .masonry-grid {
      column-count: 1;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .masonry-grid {
      column-count: 2;
    }
  }
</style>
