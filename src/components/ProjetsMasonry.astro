---
import { getCollection } from 'astro:content';

const projets = (await getCollection('projets')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<section class="projets-section">
  <h2>Mes Projets</h2>
  <div class="masonry-grid">
    {projets.map((projet) => (
      <a href={`/projets/${projet.id}`} class="projet-card">
        <div class="projet-image">
          <img src={projet.data.thumbnail} alt={projet.data.title} loading="lazy" />
          {projet.data.featured && <span class="featured-badge">â˜… En vedette</span>}
        </div>
        <div class="projet-info">
          <h3>{projet.data.title}</h3>
          <p class="projet-date">
            {projet.data.date.toLocaleDateString('fr-FR', {
              year: 'numeric',
              month: 'long'
            })}
          </p>
          <p class="projet-description">{projet.data.description}</p>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .projets-section {
    padding: 2rem 0;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .masonry-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    grid-auto-rows: 10px;
  }

  .projet-card {
    display: block;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    color: inherit;
  }

  .projet-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .projet-image {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .projet-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .featured-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #ffd700;
    color: #333;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .projet-info {
    padding: 1rem;
  }

  .projet-info h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    color: #333;
  }

  .projet-date {
    margin: 0 0 0.5rem 0;
    font-size: 0.875rem;
    color: #666;
  }

  .projet-description {
    margin: 0;
    font-size: 0.938rem;
    color: #555;
    line-height: 1.5;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .masonry-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .masonry-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
