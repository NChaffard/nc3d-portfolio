---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

const posts = await getCollection('blog');

const sortedPosts = posts.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) =>
  b.data.date.valueOf() - a.data.date.valueOf()
);
---

<section class="blog-section">
  <ul class="blog-list">
    {sortedPosts.map((post: CollectionEntry<'blog'>) => (
      <li class="blog-item">
        <article class="blog-card">
          <a href={`/blog/${post.id}`} class="blog-card-link">
            {post.data.thumbnail && (
              <div class="blog-thumbnail">
                <Image
                  src={post.data.thumbnail.image}
                  alt={post.data.thumbnail.alt}
                  width={800}
                  height={400}
                  quality={80}
                  loading="lazy"
                />
              </div>
            )}
            <div class="blog-card-content">
              <h2 class="blog-title">{post.data.title}</h2>
              <time class="blog-date" datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('fr-FR', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
          </a>
        </article>
      </li>
    ))}
  </ul>
</section>

<style>
  .blog-section {
    padding: 2rem 0;
  }

  .blog-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .blog-item {
    width: 100%;
  }

  .blog-card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    overflow: hidden;
  }

  .blog-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .blog-card-link {
    display: block;
    color: var(--primary-color);
    text-decoration: none;
  }

  .blog-thumbnail {
    width: 100%;
    overflow: hidden;
  }

  .blog-thumbnail img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .blog-card-content {
    padding: 2rem;
  }

  .blog-title {
    margin: 0 0 0.75rem 0;
    color: var(--nav-bg-color);
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .blog-date {
    display: block;
    font-size: 0.875rem;
    color: #888;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .blog-card-content {
      padding: 1.5rem;
    }

    .blog-title {
      font-size: 1.25rem;
    }
  }
</style>
