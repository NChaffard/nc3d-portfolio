---
import Logo from "../assets/svg/logo.svg";
import InstagramIcon from "../assets/svg/instagram.svg";
import FacebookIcon from "../assets/svg/facebook.svg";
import MailIcon from "../assets/svg/mail.svg";

const currentPath = Astro.url.pathname;
---

<nav class="navigation-container">
  <!-- Hamburger button (mobile only) -->
  <button class="hamburger" aria-label="Menu" id="hamburger">
    <span></span>
    <span></span>
    <span></span>
  </button>

  <!-- Logo et titre -->
  <a href="/" class="logo-container" aria-label="Retour à l'accueil">
    <Logo width={150} height={150} />
    <h1>NC3D</h1>
  </a>

  <!-- Navigation desktop (cachée sur mobile) -->
  <ul class="navigation-list desktop-nav">
    <li class="navigation-item">
      <a class="navigation-link" href="/" class:list={[{ active: currentPath === '/' }]}>Galerie</a>
    </li>
    <li class="navigation-item">
      <a class="navigation-link" href="/blog" class:list={[{ active: currentPath === '/blog' || currentPath.startsWith('/blog/') }]}>Blog</a>
    </li>
    <li class="navigation-item">
      <a class="navigation-link" href="/about" class:list={[{ active: currentPath === '/about' }]}>A propos</a>
    </li>
  </ul>

  <!-- Réseaux sociaux desktop (cachés sur mobile) -->
  <ul class="rs-list desktop-rs">
    <li class="rs-item">
      <a class="instagram-icon" href="#" aria-label="Suivez-moi sur Instagram"><InstagramIcon /></a>
    </li>
    <li class="rs-item">
      <a class="facebook-icon" href="#" aria-label="Suivez-moi sur Facebook"><FacebookIcon /></a>
    </li>
    <li class="rs-item"><a class="mail-icon" href="#" aria-label="Contactez-moi par email"><MailIcon /></a></li>
  </ul>

  <!-- Menu overlay (mobile only) -->
  <div class="menu-overlay" id="menuOverlay">
    <div class="menu-content">
      <ul class="navigation-list mobile-nav">
        <li class="navigation-item">
          <a class="navigation-link" href="/" class:list={[{ active: currentPath === '/' }]}>Galerie</a>
        </li>
        <li class="navigation-item">
          <a class="navigation-link" href="/blog" class:list={[{ active: currentPath === '/blog' || currentPath.startsWith('/blog/') }]}>Blog</a>
        </li>
        <li class="navigation-item">
          <a class="navigation-link" href="/about" class:list={[{ active: currentPath === '/about' }]}>A propos</a>
        </li>
      </ul>
      <ul class="rs-list mobile-rs">
        <li class="rs-item">
          <a class="instagram-icon" href="#" aria-label="Suivez-moi sur Instagram"><InstagramIcon /></a>
        </li>
        <li class="rs-item">
          <a class="facebook-icon" href="#" aria-label="Suivez-moi sur Facebook"><FacebookIcon /></a>
        </li>
        <li class="rs-item"><a class="mail-icon" href="#" aria-label="Contactez-moi par email"><MailIcon /></a></li>
      </ul>
    </div>
  </div>
</nav>

<script>
  const hamburger = document.getElementById('hamburger');
  const menuOverlay = document.getElementById('menuOverlay');

  hamburger?.addEventListener('click', () => {
    hamburger.classList.toggle('active');
    menuOverlay?.classList.toggle('active');
    document.body.style.overflow = menuOverlay?.classList.contains('active') ? 'hidden' : '';
  });

  // Fermer le menu en cliquant sur un lien
  const menuLinks = document.querySelectorAll('.menu-overlay .navigation-link');
  menuLinks.forEach(link => {
    link.addEventListener('click', () => {
      hamburger?.classList.remove('active');
      menuOverlay?.classList.remove('active');
      document.body.style.overflow = '';
    });
  });
</script>
<style>
  /* Desktop styles (par défaut) */
  .navigation-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    height: 100%;
    gap: 50px;
    color: #ededed;
  }

  /* Animations de chargement */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .logo-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    margin-top: 20px;
    cursor: pointer;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.6s ease-out;
  }

  .navigation-list {
    animation: fadeInUp 0.6s ease-out 0.1s backwards;
  }

  .rs-list {
    animation: fadeInUp 0.6s ease-out 0.2s backwards;
  }

  .logo-container:hover {
    transform: scale(1.05);
  }

  .logo-container h1 {
    font-weight: 100;
    font-size: 2rem;
    margin: 0;
  }

  .navigation-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding: 0;
    margin: 0;
    font-size: 1.5rem;
  }

  .navigation-link {
    padding: 12px 24px 14px;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    display: block;
  }

  .navigation-link::after {
    content: '';
    position: absolute;
    bottom: 6px;
    left: 24px;
    right: 24px;
    height: 2px;
    background: currentColor;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
    opacity: 0.8;
  }

  .navigation-link:hover,
  .navigation-link:focus-visible {
    background-color: rgba(255, 255, 255, 0.08);
    transform: translateX(3px);
  }

  .navigation-link:hover::after {
    transform: scaleX(1);
  }

  .navigation-link.active {
    background-color: rgba(255, 255, 255, 0.12);
  }

  .navigation-link.active::after {
    transform: scaleX(1);
    opacity: 1;
  }

  .navigation-link:focus-visible {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
  }

  .rs-list {
    position: absolute;
    list-style: none;
    display: flex;
    justify-content: space-evenly;
    width: 80%;
    bottom: 20px;
    gap: 20px;
    padding: 0;
    margin: 0;
  }

  .rs-item {
    width: 50px;
    aspect-ratio: 1 / 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .rs-item a {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .rs-item a:hover {
    transform: scale(1.15) rotate(5deg);
  }

  .rs-item a:focus-visible {
    outline: 2px solid var(--accent-color);
    outline-offset: 4px;
    border-radius: 50%;
  }

  /* Masquer hamburger et overlay sur desktop */
  .hamburger,
  .menu-overlay {
    display: none;
  }

  /* Afficher navigation desktop, masquer mobile */
  .mobile-nav,
  .mobile-rs {
    display: none;
  }

  .desktop-nav,
  .desktop-rs {
    display: flex;
  }

  /* Version tablette intermédiaire */
  @media (min-width: 769px) and (max-width: 1024px) {
    .navigation-container {
      gap: 40px;
    }

    .logo-container :global(svg) {
      width: 120px;
      height: 120px;
    }

    .logo-container h1 {
      font-size: 1.6rem;
    }

    .navigation-list {
      gap: 20px;
      font-size: 1.3rem;
    }

    .rs-item {
      width: 45px;
    }
  }

  /* Version mobile avec hamburger */
  @media (max-width: 768px) {
    /* Masquer navigation desktop, afficher mobile */
    .desktop-nav,
    .desktop-rs {
      display: none;
    }

    .mobile-nav,
    .mobile-rs {
      display: flex;
    }

    .navigation-container {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
      gap: 0;
      height: 70px;
    }

    /* Hamburger button */
    .hamburger {
      display: flex;
      flex-direction: column;
      gap: 5px;
      background: none;
      border: none;
      cursor: pointer;
      padding: 10px;
      z-index: 1002;
    }

    .hamburger span {
      display: block;
      width: 25px;
      height: 3px;
      background-color: #ededed;
      transition: all 0.3s ease;
      border-radius: 2px;
    }

    .hamburger.active span:nth-child(1) {
      transform: rotate(45deg) translate(8px, 8px);
    }

    .hamburger.active span:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -7px);
    }

    /* Logo mobile (centré) */
    .logo-container {
      flex-direction: row;
      margin-top: 0;
      gap: 8px;
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }

    .logo-container :global(svg) {
      width: 40px;
      height: 40px;
    }

    .logo-container h1 {
      font-size: 1.3rem;
    }

    /* Menu overlay */
    .menu-overlay {
      display: block;
      position: fixed;
      top: 0;
      left: -100%;
      width: 80%;
      max-width: 350px;
      height: 100vh;
      background: var(--nav-bg-color);
      background-image: repeating-linear-gradient(
        45deg,
        var(--nav-bg-texture-color),
        var(--nav-bg-texture-color) 1px,
        transparent 1px,
        transparent 6px
      );
      background-size: 8px 8px;
      transition: left 0.3s ease;
      z-index: 1001;
      overflow-y: auto;
    }

    .menu-overlay.active {
      left: 0;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
    }

    .menu-content {
      display: flex;
      flex-direction: column;
      align-items: stretch;
      padding: 100px 20px 20px;
      gap: 50px;
      height: 100%;
    }

    .navigation-list {
      flex-direction: column;
      gap: 8px;
      font-size: 1.3rem;
    }

    .navigation-item {
      width: 100%;
    }

    .navigation-link {
      display: block;
      padding: 18px 20px;
      font-size: 1.2rem;
      border-radius: 10px;
      transition: all 0.3s ease;
      text-align: left;
    }

    .navigation-link:hover,
    .navigation-link:active {
      background-color: rgba(255, 255, 255, 0.15);
      transform: translateX(5px);
    }

    .rs-list {
      position: relative;
      width: 100%;
      bottom: auto;
      flex-direction: column;
      gap: 15px;
      margin-top: auto;
      padding-bottom: 40px;
      padding-top: 30px;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .rs-item {
      width: 100%;
      height: auto;
      aspect-ratio: auto;
    }

    .rs-item a {
      display: flex;
      align-items: center;
      gap: 15px;
      padding: 15px 20px;
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      transition: all 0.3s ease;
      width: 100%;
    }

    .rs-item a:hover,
    .rs-item a:active {
      background-color: rgba(255, 255, 255, 0.2);
      transform: translateX(5px);
    }

    .rs-item a :global(svg) {
      width: 32px;
      height: 32px;
      flex-shrink: 0;
    }

    .rs-item a::after {
      font-size: 1rem;
      color: #ededed;
      font-weight: 500;
    }

    .instagram-icon::after {
      content: "Instagram";
    }

    .facebook-icon::after {
      content: "Facebook";
    }

    .mail-icon::after {
      content: "Email";
    }
  }
</style>
