---
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageLayout from "../../layouts/PageLayout.astro";

// 1. Génère les routes statiques pour tous les posts
export async function getStaticPaths() {
  const posts = await getCollection("blog");

  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

// 2. Récupère le post depuis les props
const { post } = Astro.props as { post: CollectionEntry<"blog"> };

// 3. Rend le contenu markdown en HTML
const { Content } = await render(post);
---

<BaseLayout pageTitle={post.data.title} pageDescription={post.data.description}>
  <PageLayout>
    <article class="post-article">
      <header class="post-header">
        <h1>{post.data.title}</h1>
        <p class="post-meta">
          {
            post.data.date.toLocaleDateString("fr-FR", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </p>
      </header>

      {post.data.thumbnail && (
        <section class="post-thumbnail">
          <img src={post.data.thumbnail.image} alt={post.data.thumbnail.alt} />
        </section>
      )}

      <section class="post-content">
        <Content />
      </section>

      <nav class="post-nav">
        <a href="/blog" class="back-link">← Retour aux articles</a>
      </nav>
    </article>
  </PageLayout>
</BaseLayout>

<style>
  .post-article {
    padding: 2rem 0;
  }

  .post-header {
    margin-top: 1rem;
    margin-bottom: 3rem;
    text-align: center;
  }

  .post-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .post-meta {
    color: #666;
    font-size: 0.938rem;
    margin-bottom: 1rem;
    text-align: start;
  }

  .post-thumbnail {
    margin-bottom: 3rem;
  }

  .post-thumbnail img {
    width: 100%;
    height: auto;
  }

  .post-content {
    margin-bottom: 3rem;
  }

  .post-content :global(h2) {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    color: #333;
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .post-content :global(p) {
    line-height: 1.7;
    margin-bottom: 1rem;
    color: #555;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .post-content :global(a) {
    color: #0066cc;
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .post-content :global(a:hover) {
    color: #004499;
  }

  .post-content :global(blockquote) {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid var(--accent-color);
    background: #f8f9fa;
    font-style: italic;
  }

  .post-content :global(code) {
    padding: 0.2em 0.4em;
    background: #f1f3f5;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
  }

  .post-content :global(pre) {
    margin: 1.5rem 0;
    padding: 1.25rem;
    background: #f8f9fa;
    border-radius: 8px;
    overflow-x: auto;
  }

  .post-content :global(pre code) {
    padding: 0;
    background: none;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .post-nav {
    padding-top: 2rem;
    border-top: 1px solid #e0e0e0;
  }

  .back-link {
    display: inline-block;
    color: #0066cc;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: #004499;
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 2rem;
    }
  }
</style>
