---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  pageTitle: string;
}
const { pageTitle = "Portfolio NC3D" } = Astro.props;
---

<div class="page-container">
  <Header pageTitle={pageTitle} />
  <main>
    <slot />
  </main>
  <Footer />
</div>

<style>
  .page-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 0 40px;
      }
</style>
